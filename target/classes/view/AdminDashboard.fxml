<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="studyapp.controller.AdminController">

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" spacing="15" styleClass="sidebar" prefWidth="250" alignment="TOP_CENTER" >
            <Label fx:id="lblTitle" text="StudyApp" styleClass="sidebar-title"/>
            <Button fx:id="btnCreateLessons" text="Create Lessons" maxWidth="Infinity"/>
            <Button fx:id="btnCreateQuizzes" text="Create Quizzes" maxWidth="Infinity"/>
            <Button fx:id="btnUserProgress" text="View User Progress" maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <StackPane fx:id="contentPane" styleClass="content-pane">
            <Label fx:id="welcomeLabel" text="Welcome Admin!" styleClass="welcome-label"/>
        </StackPane>
    </center>
</BorderPane>
    