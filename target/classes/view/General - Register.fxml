<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="studyapp.controller.RegisterController"
           styleClass="root">

    <VBox fx:id="registerContainer" styleClass="login-container" alignment="CENTER" spacing="15">
        <Label text="StudyApp" styleClass="app-title" />
        <Label text="Register" styleClass="login-title" />

        <TextField fx:id="usernameField" promptText="Username" styleClass="text-field" />
        <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="password-field" />

        <Button text="Register" onAction="#handleRegister" styleClass="login-button" />

        <Label fx:id="errorLabel" styleClass="error-label" />

        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" />
            <Hyperlink text="Sign In" onAction="#goToLogin" />
        </HBox>
    </VBox>
</StackPane>
