<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="studyapp.controller.MainController">

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" spacing="15" styleClass="sidebar" prefWidth="200" alignment="TOP_CENTER" >
            <Label text="StudyApp" styleClass="sidebar-title"/>
            <Button fx:id="btnLessons" text="Lessons" maxWidth="Infinity"/>
            <Button fx:id="btnQuizzes" text="Quizzes" maxWidth="Infinity"/>
            <Button fx:id="btnProgress" text="Progress" maxWidth="Infinity"/>
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <StackPane fx:id="contentPane" styleClass="content-pane">
            <Label fx:id="welcomeLabel" text="Welcome to StudyApp!" styleClass="welcome-label"/>
        </StackPane>
    </center>
</BorderPane>
