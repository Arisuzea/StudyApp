<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="studyapp.controller.QuizDetailController"
      spacing="20"
      alignment="CENTER"
      style="-fx-background-color: #ecf0f1;">
      
    <padding>
        <Insets>
            <top>40</top>
            <right>40</right>
            <bottom>40</bottom>
            <left>40</left>
        </Insets>
    </padding>

    <Label fx:id="titleLabel" style="-fx-font-size: 32px; -fx-text-fill: #2c3e50;" />
    <Label fx:id="descriptionLabel" wrapText="true" style="-fx-font-size: 18px; -fx-text-fill: #34495e;" />
    <Label fx:id="itemCountLabel" style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d;" />
    <Button fx:id="startButton" text="Start Quiz"
            style="-fx-font-size: 20px; -fx-background-color: #2ecc71; -fx-text-fill: white;"
            onAction="#startQuiz" />
</VBox>

